{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",

  "definitions": {
    "account": {
      "type": "object",
      "properties": {
        "id":                 { "type": "integer" },
        "customer_id":        { "type": "integer" },
        "open_branch_id":     { "type": "integer" },
        "open_emp_id":        { "type": "integer" },
        "product_cd":         { "type": "string" },
        "open_date":          { "type": "integer" },
        "close_date":         { "type": "integer" },
        "last_activity_date": { "type": "integer" },
        "avail_balance":      { "type": "number" },
        "pending_balance":    { "type": "number" },
        "status":             { "type": "string" },
        "customer":           { "$ref": "#/definitions/customer" }
      },
      "required": ["customer_id", "open_date"],
      "additionalProperties": false
    },
    "customer": {
      "type": "object",
      "properties": {
        "fed_id":       { "type": "string" },
        "cust_type_cd": { "type": "string" },
        "address":      { "type": "string" },
        "city":         { "type": "string" },
        "state":        { "type": "string" },
        "postal_code":  { "type": "string" }
      },
      "additionalProperties": false
    }
  },

  "properties": {
    "accounts": {
      "type": "array",
      "items": { "$ref": "#/definitions/account" }
    },
    "customers": {
      "type": "array",
      "items": { "$ref": "#/definitions/customer" }
    }
  }
}
